<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/layout_del"
                android:orientation="vertical">

                <com.infoicon.acim.utils.customviews.CustomTextView
                    android:id="@+id/notesTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Note for Lesson 1"
                    android:padding="5dp"/>
                <com.infoicon.acim.utils.customviews.CustomTextView
                    android:id="@+id/textViewDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Created on:June 27,2017"
                    android:paddingLeft="5dp"
                    android:paddingBottom="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">
              <ImageView
                  android:id="@+id/btnDetails"
                  android:layout_width="35dp"
                  android:layout_height="35dp"
                  android:padding="10dp"
                  android:src="@drawable/eye_icon"
                  android:layout_gravity="center"
                  android:background="@android:drawable/list_selector_background" />
                <ImageView
                    android:id="@+id/btnEdit"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:padding="10dp"
                    android:src="@drawable/edit_blue"
                    android:layout_gravity="center"
                    android:background="@android:drawable/list_selector_background"
                    />
                <ImageView
                    android:id="@+id/btnDelete"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:padding="10dp"
                    android:src="@drawable/delete_icon"
                    android:layout_gravity="center"
                    android:background="@android:drawable/list_selector_background"
                    />
            </LinearLayout>
        </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
   <!-- </LinearLayout>-->
</LinearLayout>