<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/imageViewPlay"
            android:padding="10dp"
            android:orientation="horizontal">
        <com.infoicon.acim.utils.customviews.CustomTextView
            android:id="@+id/tvSerialNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18dp"/>

        <com.infoicon.acim.utils.customviews.CustomTextView
            android:id="@+id/tvAudioName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Audio1"
            android:layout_marginLeft="5dp"
            android:textSize="16dp"
            />

        <com.infoicon.acim.utils.customviews.CustomTextView
            android:id="@+id/tvDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvAudioName"
            android:text="10:14"
            android:layout_marginLeft="10dp"
            android:textSize="16dp" />

        </LinearLayout>


        <ImageView
            android:id="@+id/imageViewPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/play_icon_small"
            android:padding="10dp"
            android:layout_toLeftOf="@+id/imageViewDelete"
            android:layout_centerVertical="true"
            android:background="@android:drawable/list_selector_background"
            />

        <ImageView
            android:id="@+id/imageViewDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/delete_icon"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@android:drawable/list_selector_background"
            />



    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
</LinearLayout>